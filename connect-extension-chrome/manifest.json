{
  "manifest_version": 3,
  "name": "Connect Extension",
  "description": "Extension pour la d√©couverte de consultants",
  "version": "1.0",
  "action": {
    "default_title": "Connect Extension",
    "default_icon": "icon.png"
  },
  "permissions": [
    "sidePanel",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://0.0.0.0:8000/",
    "https://api.fastconnect.io/",
    "https://*.replit.dev/",
    "https://*.replit.app/",
    "https://*.linkedin.com/*"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "icon.png", "styles.css", "runtime.js", "polyfills.js", "vendor.js", "main.js", "*.js", "assets/*"],
      "matches": ["https://*.linkedin.com/*"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}